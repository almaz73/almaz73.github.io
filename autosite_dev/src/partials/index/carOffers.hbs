        <script>
            function createGalery(id) {
                const gallery = document.querySelector('#galery_' + id + ' .cart__slide');
                const photo = gallery.querySelector('.photo');
                const areas = gallery.querySelectorAll('.area');
                const images = [
                    '../photo-offers/' + id + '/p1.jpg',
                    '../photo-offers/' + id + '/p2.jpg',
                    '../photo-offers/' + id + '/p3.jpg',
                    '../photo-offers/' + id + '/p4.jpg',
                    '../photo-offers/' + id + '/p5.jpg',
                    '../photo-offers/' + id + '/p6.jpg'
                ];

                photo.src = '/photo-offers/' + id + '/p1.jpg'
                areas.forEach((area, i) => area.addEventListener('mouseenter', () => photo.src = images[i + 1]));
                gallery.addEventListener('mouseleave', () => photo.src = images[0]);
                gallery.addEventListener('mouseenter', () => document.querySelector('#galery_' + id + ' .cart__slide .area.a1').style.boxShadow = '');
                document.querySelector('#galery_' + id + ' .cart__slide .area.a1').style.boxShadow = 'inset 0 -4px 0 red'
            }

